server {
    listen 80 http2;
    listen 443 ssl http2;
    server_name {{u22_domain_info.name | join(' ')}};
    ssl_certificate /etc/letsencrypt/live/{{u22_domain_info.name | first | replace('*.', '')}}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{u22_domain_info.name | first | replace('*.', '')}}/privkey.pem; # managed by Certbot
    ssl_trusted_certificate /etc/letsencrypt/live/{{u22_domain_info.name | first | replace('*.', '')}}/chain.pem; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
    location / {
            proxy_pass              http://localhost:{{u22_nginx_reverse_proxy_backend_port}};
            proxy_set_header        Host $host;
            proxy_set_header        X-Real-IP $remote_addr;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header        X-Forwarded-Host {{u22_domain_info.name | first | replace('*.', '')}};
            proxy_http_version      1.1;
            proxy_buffer_size 128k;
            proxy_buffers 4 256k;
            proxy_busy_buffers_size 256k;
    }
    access_log /var/log/nginx/reverse_proxy.access.log;
    error_log /var/log/nginx/reverse_proxy.error.log;
}
